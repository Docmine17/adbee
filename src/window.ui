<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.0"/>
  <template class="AdbeeWindow" parent="AdwApplicationWindow">
    <property name="default-width">400</property>
    <property name="default-height">520</property>
    <property name="title">ADBee</property>
    <child>
      <object class="AdwToastOverlay" id="toast_overlay">
        <child>
          <object class="AdwToolbarView">
            <child type="top">
              <object class="AdwHeaderBar">
                <child type="end">
                  <object class="GtkMenuButton">
                    <property name="icon-name">open-menu-symbolic</property>
                    <property name="menu-model">primary_menu</property>
                    <property name="tooltip-text" translatable="yes">Menu</property>
                  </object>
                </child>
              </object>
            </child>
            <property name="content">
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <property name="spacing">24</property>
                <property name="margin-start">24</property>
                <property name="margin-end">24</property>
                <property name="margin-top">24</property>
                <property name="margin-bottom">24</property>
                <property name="valign">center</property>
                
                <!-- QR Code -->
                <child>
                  <object class="GtkFrame">
                    <property name="halign">center</property>
                    <style>
                      <class name="card"/>
                    </style>
                    <child>
                      <object class="GtkPicture" id="qr_picture">
                        <property name="width-request">280</property>
                        <property name="height-request">280</property>
                        <property name="content-fit">contain</property>
                      </object>
                    </child>
                  </object>
                </child>
                
                <!-- Status -->
                <child>
                  <object class="GtkLabel" id="status_label">
                    <property name="label" translatable="yes">Generating QR code...</property>
                    <property name="wrap">true</property>
                    <property name="justify">center</property>
                    <style>
                      <class name="dim-label"/>
                    </style>
                  </object>
                </child>
                
                <!-- Info Box -->
                <child>
                  <object class="GtkBox">
                    <property name="orientation">vertical</property>
                    <property name="spacing">8</property>
                    <property name="halign">center</property>
                    
                    <child>
                      <object class="GtkBox">
                        <property name="spacing">8</property>
                        <property name="halign">center</property>
                        <child>
                          <object class="GtkLabel">
                            <property name="label" translatable="yes">Service:</property>
                            <style>
                              <class name="dim-label"/>
                            </style>
                          </object>
                        </child>
                        <child>
                          <object class="GtkLabel" id="service_name_label">
                            <property name="label">-</property>
                            <property name="selectable">true</property>
                            <style>
                              <class name="monospace"/>
                            </style>
                          </object>
                        </child>
                      </object>
                    </child>
                    
                    <child>
                      <object class="GtkBox">
                        <property name="spacing">8</property>
                        <property name="halign">center</property>
                        <child>
                          <object class="GtkLabel">
                            <property name="label" translatable="yes">Code:</property>
                            <style>
                              <class name="dim-label"/>
                            </style>
                          </object>
                        </child>
                        <child>
                          <object class="GtkLabel" id="pairing_code_label">
                            <property name="label">------</property>
                            <property name="selectable">true</property>
                            <style>
                              <class name="monospace"/>
                              <class name="title-1"/>
                            </style>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
                
                <!-- Generate Button -->
                <child>
                  <object class="GtkButton" id="generate_button">
                    <property name="label" translatable="yes">Generate New Code</property>
                    <property name="halign">center</property>
                    <signal name="clicked" handler="on_generate_clicked"/>
                    <style>
                      <class name="pill"/>
                      <class name="suggested-action"/>
                    </style>
                  </object>
                </child>
                
              </object>
            </property>
          </object>
        </child>
      </object>
    </child>
  </template>
  
  <menu id="primary_menu">
    <section>
      <item>
        <attribute name="label" translatable="yes">Auto Connect</attribute>
        <attribute name="action">app.auto-connect</attribute>
      </item>
    </section>
    <section>
      <item>
        <attribute name="label" translatable="yes">About ADBee</attribute>
        <attribute name="action">app.about</attribute>
      </item>
    </section>
  </menu>
</interface>
