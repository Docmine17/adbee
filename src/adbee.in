import os
import sys
import signal
import locale
import gettext

VERSION = '@VERSION@'
pkgdatadir = '@pkgdatadir@'
localedir = '@localedir@'

sys.path.insert(1, pkgdatadir)
signal.signal(signal.SIGINT, signal.SIG_DFL)

locale.bindtextdomain('adbee', localedir)
locale.textdomain('adbee')
gettext.install('adbee', localedir)

if __name__ == '__main__':
    import gi

    gi.require_version('Gtk', '4.0')
    gi.require_version('Adw', '1')

    from gi.repository import Gio
    resource = Gio.Resource.load(os.path.join(pkgdatadir, 'adbee.gresource'))
    resource._register()

    from adbee import main
    sys.exit(main.main(VERSION))
